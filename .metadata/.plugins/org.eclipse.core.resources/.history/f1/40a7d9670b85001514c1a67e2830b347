import math

def main():
    
    n = eval(input("Please enter a whole number: "))
    fact = 1
      
    for factor in range(n, 1, -1):
        fact = fact * factor
        print(fact)
          
    print ("The factorial of", n, "is", fact)

    enteredValue = eval(input("Enter the factorial number you like calculated; "))
      
    fact = 1;
    for factor in list(range(1, enteredValue)):
        fact = fact * factor;
        print(fact)
      
    print("Factorial of ", enteredValue, " is ", fact)
    
main()